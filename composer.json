{
    "name": "yagoaugusto/ilumina",
    "description": "Sistema PWA para gestão da iluminação pública",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.4|^8.0",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "illuminate/database": "^8.0",
        "vlucas/phpdotenv": "^5.0",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public"
    }
}